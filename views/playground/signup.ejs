<%- include('../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class='mb-3'>Create An Account.</h4>
                <form action="/validator" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="username">Enter Your User Name(*unique)</label>
                        <input type="text" name="username" class="form-control" id="username">
                    </div>
                    <div class="form-group">
                        <label for="email">Enter Your File</label>
                        <input type="file" name="file" class="form-control" id="email">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Signup">
                </form>
                <a href="/auth/login" class="text-center my-3">Have an Account ?</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

</body>

</html>