<%- include('../../../partials/head.ejs') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10 my-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class='card card-body mx-5 py-3'>
                        <h5 class='my-3'>Create A Post</h5>
                        <form action="/post/create-post" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="titleInput">Enter A Short Title</label>
                                <input type="text" name="title" id="titleInput"
                                    value="<%= value.title ? value.title : '' %> "
                                    class="form-control <%= error.title ? 'is-invalid' : '' %>"
                                    placeholder="Enter A Short Title">
                                <div class='invalid-feedback'>
                                    <%= error.title && error.title %>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="tiny-mce-post-body">Enter Post Body</label>
                                <textarea name="body" id="tiny-mce-post-body"
                                    class="form-control <%= error.body ? 'is-invalid' : '' %>"><%= value.body %></textarea>
                                <div class='invalid-feedback'>
                                    <%= error.body && error.body %>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="tags">Enter Post Tags(Max 10)</label>
                                <input type="text" name="tags" id="tags" class='form-control' value="<%= value.tags %> "
                                    placeholder="tag1 , tag2 , tag3..">
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Upload</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" name="post-thumbnail" class="custom-file-input"
                                        id="inputGroupFile">
                                    <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                                </div>
                            </div>
                            <input type="submit" value="Create Post" class='btn btn-primary'>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/footer.ejs') %>

<script src="https://cdn.tiny.cloud/1/aba6nlrjzfvzh9xsqco6ugfdno667n67ku3v8ymb2mxyatkj/tinymce/5/tinymce.min.js"
    referrerpolicy="origin"></script>

<script src="/scripts/tinymce.js"></script>

<script>
    $('#inputGroupFile').on('change', function (e) {
        let filename = e.target.files[0].name
        $(this).next('.custom-file-label').html(filename)
    })
</script>

</body>

</html>