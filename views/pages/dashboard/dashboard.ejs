<%- include('../../partials/head.ejs') %>

<div class="container my-container ">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2 my-5">
                    <h5>My recently created posts</h5>
                    <div class="row">
                        <% if (posts.length == 0) { %>
                        <p class="text-center text-muted">
                            There is no post available now
                        </p>
                        <% } else {%>
                        <% for( let post of posts ) { %>
                        <div class="col-sm-3 m-2 card">
                            <% if (post.thumbnail) { %>
                            <img src="<%= post.thumbnail %> " alt="<%= post.title %> " class='card-img-top mt-3'>
                            <% } %>
                            <div class="card-body p-0">
                                <a href="/explorer/<%= post._id %> ">
                                    <p class="my-2"><%= post.title %> </p>
                                </a>
                            </div>
                        </div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h5>My recent bookmark posts</h5>
                    <div class="row">
                        <% if (bookmarks.length == 0) { %>
                        <p class="text-center text-muted">
                            There is no post available now
                        </p>
                        <% } else {%>
                        <% for( let post of bookmarks ) { %>
                        <div class="col-sm-3 m-2 card">
                            <% if (post.thumbnail) { %>
                            <img src="<%= post.thumbnail %> " alt="<%= post.title %> " class='card-img-top mt-3'>
                            <% } %>
                            <div class="card-body p-0">
                                <a href="/explorer/<%= post._id %> ">
                                    <p class="my-2"><%= post.title %> </p>
                                </a>
                            </div>
                        </div>
                        <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>

</html>