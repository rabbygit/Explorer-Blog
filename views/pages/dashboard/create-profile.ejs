<%- include('../../partials/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card card-body my-5">
                        <h4>Create Profile</h4>
                        <div class="profile-pics">
                            <img src="<%= user.profilePics %>" alt="/uploads/default.png"
                                class='img-thumbnail img-fluid' id="profilePics">
                            <form action="/uploads/profilePics" method="post" class='my-2' id="profilePicsFrom">
                                <input type="file" name="profilePics" id="profilePicsFile" accept="image/*">
                                <input type="button" value="Remove Pic" id="remove-pic"
                                    style="display: <%= user.profilePics.includes('default.png') ? 'none' : 'block' %>"
                                    class='btn btn-danger btn-sm my-2'>
                            </form>
                        </div>
                        <div>
                            <form action="/dashboard/create-profile" method="post">
                                <div class="form-group">
                                    <label for="name">Enter Your Name</label>
                                    <input type="text" name="name" id="name"
                                        class='form-control <%= error.name ? 'is-invalid' : '' %> '
                                        placeholder="Enter Your name">
                                    <div class='invalid-feedback'>
                                        <%= error.name && error.name %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email">Enter Your Email</label>
                                    <input type="email" name="email" id="email" class='form-control'
                                        placeholder="Enter Your Email" value="<%= user.email %> " disabled>
                                </div>
                                <div class="form-group">
                                    <label for="title">Enter A Short Title</label>
                                    <input type="text" name="title" id="title"
                                        class='form-control <%= error.title ? 'is-invalid' : '' %>'
                                        placeholder="Enter A Short Title">
                                    <div class='invalid-feedback'>
                                        <%= error.title && error.title %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="bio">Enter A Short Bio</label>
                                    <textarea name="bio" id="bio"
                                        class='form-control <%= error.bio ? 'is-invalid' : '' %>'></textarea>
                                    <div class='invalid-feedback'>
                                        <%= error.bio && error.bio %>
                                    </div>
                                </div>
                                <p class="lead">Enter Your Social Links</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fab fa-internet-explorer"></i>
                                        </span>
                                    </div>
                                    <input type="text" name="website" placeholder="Website Link"
                                        class="form-control <%= error.website ? 'is-invalid' : '' %>">
                                    <div class='invalid-feedback'>
                                        <%= error.website && error.website %>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fab fa-facebook-square"></i>
                                        </span>
                                    </div>
                                    <input type="text" name="facebook" placeholder="Facebook Link"
                                        class="form-control <%= error.facebook ? 'is-invalid' : '' %>">
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fab fa-twitter-square"></i>
                                        </span>
                                    </div>
                                    <input type="text" name="twitter" placeholder="Twitter Link"
                                        class="form-control <%= error.twitter ? 'is-invalid' : '' %>">
                                    <div class='invalid-feedback'>
                                        <%= error.twitter && error.twitter %>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fab fa-github-square"></i>
                                        </span>
                                    </div>
                                    <input type="text" name="github" placeholder="Twitter Link"
                                        class="form-control <%= error.github ? 'is-invalid' : '' %>">
                                    <div class='invalid-feedback'>
                                        <%= error.github && error.github %>
                                    </div>
                                </div>

                                <input type="submit" class='btn btn-primary' value="Create Profile">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="crop-modal" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Resize Your Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="cropped-image">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="cancel-cropping" class="btn btn-secondary"
                        data-dismiss="modal">Cancel</button>
                    <button type="button" id="upload-image" class="btn btn-primary">Upload</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.js"></script>
<script src="/scripts/profilePicsUpload.js"></script>

</body>

</html>