<%- include('../../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class='mb-3'>Login To Your Account.</h4>
                <form action="/auth/login" method="POST">
                    <div class="form-group">
                        <label for="email">Enter Your Email</label>
                        <input type="email" name="email" class="form-control <%= error.email ? 'is-invalid' : '' %>"
                            id="email">
                        <div class='invalid-feedback'>
                            <%= error.email && error.email %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter a Strong Password</label>
                        <input type="password" name="password"
                            class="form-control <%= error.password ? 'is-invalid' : '' %>" id="password">
                        <div class='invalid-feedback'>
                            <%= error.password && error.password %>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Login">
                </form>
                <a href="/auth/signup" class='text-center my-3'>Don't have an Account ?</a>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>

</body>

</html>